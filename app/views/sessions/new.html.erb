<p id='alert'><%= alert %></p>
<h4>Login</h4>
<%= form_tag sessions_path do |form| %>
  <div class='field'>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>
  <div class='field'>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class='actions'>
    <%= submit_tag 'Login', class: 'btn' %>
  </div>
<% end %>
